<?xml version="1.0" encoding="utf-8"?>
<manifest package="org.deadbeef.android"
      android:versionCode="2"
      android:versionName="1.0alpha2" xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-sdk android:minSdkVersion="4" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.BROADCAST_STICKY"/>
    <application
    	
    	android:icon="@drawable/icon"
    	android:label="@string/app_name"
    	android:testOnly="false" android:debuggable="false">
    	 
        <activity
        		android:icon="@drawable/icon"
        		android:name="Deadbeef"
                android:theme="@android:style/Theme.NoTitleBar"
                android:label="@string/app_name"
                android:taskAffinity=""
                android:launchMode="singleTask"
                android:clearTaskOnLaunch="true"
                >
                <!-- android:excludeFromRecents="true"-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="org.deadbeef.android.PLAYBACK_VIEWER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        

    <activity android:name="FileBrowser"
    	 android:label="@string/title_file_browser"
    	 android:launchMode="standard">
	</activity>
    <activity android:name="PlaylistViewer"
    	 android:label="@string/title_playlist_viewer"
    	 android:launchMode="standard">
	</activity>
    <activity android:name="EQ"
    	 android:label="@string/title_supereq"
    	 android:launchMode="standard">
	</activity>
	    <receiver android:name="MediaButtonIntentReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
                <action android:name="android.media.AUDIO_BECOMING_NOISY" />
            </intent-filter>
        </receiver>
        
    <activity android:name="StreamStarter">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="content"/>
                <data android:scheme="file"/>
                <!-- data android:scheme="http" /-->
                <data android:mimeType="audio/mp3"/>
                <data android:mimeType="audio/x-mp3"/>
                <data android:mimeType="audio/mpeg"/>
                <data android:mimeType="audio/x-mpeg"/>
                <data android:mimeType="audio/mpeg3"/>
                <data android:mimeType="audio/x-mpeg3"/>
                <data android:mimeType="audio/x-psid"/>
                <data android:mimeType="audio/s3m"/>
                <data android:mimeType="audio/x-s3m"/>
                <data android:mimeType="audio/mod"/>
                <data android:mimeType="audio/x-mod"/>
                <data android:mimeType="audio/ogg"/>
                <data android:mimeType="audio/flac"/>
                <data android:mimeType="audio/wav"/>
                <data android:mimeType="audio/x-wav"/>
                <data android:mimeType="audio/voc"/>
                <data android:mimeType="audio/x-voc"/>
                <data android:mimeType="audio/x-wavpack"/>
                <data android:mimeType="audio/x-mod"/>
                <data android:mimeType="audio/x-monkeys-audio"/>
                <data android:mimeType="audio/xm"/>
                <data android:mimeType="audio/it"/>
                <data android:mimeType="audio/aiff"/>
                <data android:mimeType="audio/x-aiff"/>
                <data android:mimeType="audio/x-au"/>
                <data android:mimeType="audio/midi"/>
                <data android:mimeType="audio/x-mid"/>
                <data android:mimeType="audio/x-midi"/>
                <data android:mimeType="audio/mp4"/>
                <data android:mimeType="audio/mp4a-latm"/>
            </intent-filter>
        </activity>
        
        <activity android:name="TrackPropertiesViewer">
	        <intent-filter>
	            <action android:name="org.deadbeef.android.TRACK_PROPERTIES_VIEWER" />
	            <category android:name="android.intent.category.DEFAULT" />
	        </intent-filter>
        </activity>
	
        <activity android:name="SelectPlaylist">
	        <intent-filter>
	            <action android:name="org.deadbeef.android.PLAYLIST_MANAGER" />
	            <category android:name="android.intent.category.DEFAULT" />
	        </intent-filter>
        </activity>

<service android:name="MediaPlaybackService" android:label="@string/app_name" android:icon="@drawable/stat_notify_musicplayer" android:process="@string/app_name" android:enabled="true"></service>

        <receiver android:name="org.deadbeef.android.MediaAppWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/appwidget_info" />
        </receiver>

</application>




</manifest> 
