<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.deadbeef.android"
      android:versionCode="1"
      android:versionName="1.0">
    <application
    	
    	android:icon="@drawable/icon"
    	android:label="@string/app_name"
    	android:testOnly="false" android:debuggable="true">
    	 
        <activity
        		android:icon="@drawable/icon"
        		android:name="org.deadbeef.android.Deadbeef"
                android:theme="@android:style/Theme.NoTitleBar"
                android:label="@string/app_name"
                android:taskAffinity=""
                android:launchMode="singleTask"
                android:clearTaskOnLaunch="true"
                android:excludeFromRecents="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="content"/>
                <data android:scheme="file"/>
                <data android:mimeType="audio/*"/>
                <data android:mimeType="application/ogg"/>
                <data android:mimeType="application/x-ogg"/>
                <data android:mimeType="application/itunes"/>
            </intent-filter>
            <intent-filter>
                <action android:name="org.deadbeef.android.PLAYBACK_VIEWER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        

    <activity android:name=".FileBrowser"
    	 android:label="@string/title_file_browser"
    	 android:launchMode="standard">
	</activity>
<service android:name="MediaPlaybackService" android:label="@string/app_name" android:icon="@drawable/ddb_24" android:process="@string/app_name" android:enabled="true"></service>
</application>



</manifest> 