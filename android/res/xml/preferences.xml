<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
        <PreferenceCategory
                android:title="Last.fm scrobbler">
                <CheckBoxPreference
                        android:title="Enable scrobbling"
                        android:defaultValue="false"
                        android:summary="Requires last.fm app"
                        android:key="enable_lastfm" />
        </PreferenceCategory>
        <PreferenceCategory
                android:title="Replay gain">
                <ListPreference
                        android:title="Mode"
                        android:summary="Select Disabled, Track or Album replaygain mode"
                        android:key="rg_mode"
                        android:entries="@array/rgModesArray"
                        android:entryValues="@array/listValues"
                        android:defaultValue="0"/>
                <CheckBoxPreference
                        android:title="Enable peak scale"
                        android:defaultValue="true"
                        android:key="rg_peakscale" />
        </PreferenceCategory>
        <PreferenceCategory
                android:title="General">
                <CheckBoxPreference
                        android:title="Disable archive support"
                        android:summary="This option will ignore zip archives when adding folders"
                        android:defaultValue="false"
                        android:key="disable_archives" />
        <EditTextPreference
                android:summary="This affects where files are going when started from Downloads, etc"
                android:defaultValue="Default"
                android:name="Default"
                android:title="Default playlist"
                android:key="default_playlist" />
        <!-- CheckBoxPreference
                android:title="Use large buffer size"
                android:defaultValue="true"
                android:summary="Large buffer is better for CPU load."
                android:key="enable_bigbuffer" /-->
        <ListPreference
                android:title="Sound buffer size"
                android:summary="Higher size increases latency, but reduces CPU load"
                android:key="buffersize"
                android:entries="@array/bufferSizes"
                android:entryValues="@array/bufferSizeValues"
                android:defaultValue="32000"/>
        </PreferenceCategory>
</PreferenceScreen>

